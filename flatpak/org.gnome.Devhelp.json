{
	"app-id": "org.gnome.Devhelp",
	"runtime": "org.gnome.Sdk",
	"runtime-version": "master",
	"sdk": "org.gnome.Sdk",
	"command": "devhelp",
	"tags": [
		"nightly"
	],
	"desktop-file-name-prefix": "(Nightly) ",
	"finish-args": [
		"--share=ipc",
		"--socket=x11",
		"--socket=wayland",
		"--device=dri",
		"--filesystem=host:ro",
		"--filesystem=xdg-run/dconf",
		"--filesystem=~/.config/dconf:ro",
		"--talk-name=ca.desrt.dconf",
		"--env=DCONF_USER_CONFIG_DIR=.config/dconf"
	],
	"build-options": {
		"cflags": "-O2 -g",
		"cxxflags": "-O2 -g",
		"env": {
			"V": "1"
		}
	},
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/share/pkgconfig",
		"share/aclocal",
		"man",
		"share/man",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "amtk",
			"run-tests": true,
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/GNOME/amtk.git",
					"branch": "master"
				}
			]
		},
		{
			"name": "devhelp",
			"buildsystem": "meson",
			"config-opts": [
				"-Dflatpak_build=true"
			],
			"run-tests": true,
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/GNOME/devhelp.git",
					"branch": "master"
				}
			]
		}
	]
}